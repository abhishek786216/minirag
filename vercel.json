{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/main.py"
    }
  ],
  "env": {
    "OPENAI_API_KEY": "@openai_api_key",
    "PINECONE_API_KEY": "@pinecone_api_key",
    "PINECONE_ENVIRONMENT": "@pinecone_environment",
    "PINECONE_INDEX_NAME": "@pinecone_index_name",
    "COHERE_API_KEY": "@cohere_api_key"
  },
  "functions": {
    "main.py": {
      "maxDuration": 30
    }
  }
}